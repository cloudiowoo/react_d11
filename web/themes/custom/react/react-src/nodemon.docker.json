{
  "watch": ["src", "src/i18n/locales"],
  "ext": "js,jsx,ts,tsx,css,scss,json",
  "ignore": ["node_modules", "../js", "dist", "*.log"],
  "exec": "npm run build:auto",
  "delay": 3000,
  "legacyWatch": true,
  "polling": true,
  "verbose": false,
  "restartable": "rs",
  "crashOnError": false,
  "env": {
    "NODE_ENV": "development",
    "CHOKIDAR_USEPOLLING": "true",
    "CHOKIDAR_INTERVAL": "2000"
  }
} 